<Window x:Class="MosqueMate.Pages.QuranImageTemplate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:uc="clr-namespace:MosqueMate.UserControls"
         mc:Ignorable="d" Height="700" Width="500" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown"   Loaded="Window_Loaded" AllowsTransparency="True" WindowStyle="None"  Background="Transparent"  FlowDirection="RightToLeft">
